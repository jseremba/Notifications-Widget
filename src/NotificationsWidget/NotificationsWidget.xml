<?xml version="1.0" encoding="utf-8" ?>
<widget id="NotificationsWidget.widget.NotificationsWidget" needsEntityContext="true" xmlns="http://www.mendix.com/widget/1.0/">
  <name>NotificationsWidget</name>
  <description>Widget to show unread notifications</description>

  <icon></icon>

  <properties>
        <property key="actionMicroflow" type="microflow" required="false">
            <caption>Action Microflow</caption>
            <category>Behavior</category>
            <description>This microflow will be invoked when the user clicks on the Notification widget.</description>
            <returnType type="Void"/>
        </property>	
        <property key="counterMicroflow" type="microflow" required="true">
            <caption>Counter microflow</caption>
            <category>Behavior</category>
            <description>This microflow should return the amount of unread notifications.</description>
            <returnType type="Integer"/>
        </property>
		<property key="tooltipCaption" type="translatableString">
            <caption>Caption</caption>
            <category>Behavior</category>
            <description>The caption of the tooltip</description>
        </property>      
	</properties>
</widget>

